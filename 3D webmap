<script>
require(
["esri/views/SceneView",
"esri/portal/PortalItem",
"esri/WebScene",
"dojo/domReady!"
],function(
SceneView,PortalItem,WebScene
){
		var scene = new WebScene({
		portalItem: new PortalItem({
		id : "f397e01eed5548379baccd8e819eb58c"})
		});
		var view = new SceneView({
		map:scene,
		container:"map1"});
});
</script>
